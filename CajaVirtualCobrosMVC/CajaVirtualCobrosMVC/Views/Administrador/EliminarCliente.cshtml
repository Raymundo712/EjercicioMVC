@model CajaVirtualCobrosMVC.Models.ClienteViewModel

<h1 style="text-align: center; font-size: 24px;">Eliminar Cliente</h1>

<p>Nombre de Cliente: @Model?.Cliente?.Nombre</p>
<p>Numero de Cliente: @Model?.Cliente?.NumeroCliente</p>

<p>Nombre de Usuario: @Model?.Usuario?.UsuarioNombre</p>
<p>Rol de Usuario: @Model?.Usuario?.Rol?.Nombre</p>

<p>Saldo Estado de Cuenta Cliente: @Model?.Cliente?.EstadoCuenta?.Saldo</p>

<link href="@Url.Content("~/Content/site.css")" rel="stylesheet" type="text/css" />


@using (Html.BeginForm("EliminadoCliente", "Administrador", FormMethod.Post))
{
    <input type="hidden" id="clienteId" name="clienteId" value="@Model.Cliente.Id" />
    <input type="submit" value="Eliminar Usuario" class="btn btn-danger" style="font-size: 18px;" />
}

